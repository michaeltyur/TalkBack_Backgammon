<Window x:Class="Client.Game.GameFinish.GameOver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Game"
        mc:Ignorable="d"
        Title="Game Over" Width="400" Height="304"  x:Name="finishtWindow" Background="Gray"
         WindowStyle="None" WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="MyMainWindow_MouseLeftButtonDown" ResizeMode="NoResize">
    <Border BorderBrush="DarkSlateGray" BorderThickness="2" CornerRadius="3" >
        <StackPanel >
            <Image x:Name="windowBackground" Source="{Binding Path=Image, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                        Margin="5,5,5,5" Stretch="Fill"
                       Width="390" Height="290"></Image>
        </StackPanel>
    </Border>
</Window>
